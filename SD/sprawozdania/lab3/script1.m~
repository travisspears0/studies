%setup
clearvars;
close all;
clc;

%{
rownanie liniowe z sekcji 1.3.1
x(k+1) = Ax(k)+Bu(k)
dla B=0
x(k+1) = Ax(k)
przypadki
    A < -1
    A = -1
    A > -1 i A < 0
    A = 0
    A > 0 i A < 1
    A = 1
    A > 1
rozwiazanie (dla B=0) to:
x(k) = A^k *x(0)
%}

%przykladowe wartosci A:
atab = [-2 -1 -.5 0 .8 1 5];
wyniki = [0 0 0 0 0 0 0];
[x, len] = size(atab);
%przykladowa wartosc poczatkowa
x0 = 2;

%petla wyliczajaca x(k) dla poszczegolnych wartosci A
%k=3;
for k=1:10
    for i=1:len
        a = atab(i);
        wyniki(i) = a.^k*x0;
        %fprintf('dla: x0=%d, k=%d, A=%d: x(%d) = %d\n',x0,k,a,k,xk);
    end
    ks = 1:1:10;
    plot()
end

grid on;
xlabel('x');
ylabel('y');
axis([-10 10 -10 10]);